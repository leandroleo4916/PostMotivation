<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/constraint_rancking"
    android:layout_marginStart="2dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/back_white_stroke"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_name_rancking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Texto aleatório inserido pelo usuário ou pelo sistema. Texto aleatório inserido..."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/icon_image"
        app:layout_constraintEnd_toEndOf="@+id/icon_image"
        app:layout_constraintStart_toStartOf="@id/icon_image"
        app:layout_constraintTop_toTopOf="@id/icon_image" />


</androidx.constraintlayout.widget.ConstraintLayout>
